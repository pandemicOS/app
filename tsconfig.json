{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "build/dist",
    "experimentalDecorators": true,
    "removeComments": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "jsx": "react-native",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
